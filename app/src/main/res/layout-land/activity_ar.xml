<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yusef.canals.ARStuff.ARActivity">

    <FrameLayout
        android:id="@+id/camera_container_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <SurfaceView
            android:id="@+id/surface_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

    <TextView
        android:id="@+id/tv_current_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textColor="@android:color/white"
        android:text="GPS is loading..."/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout android:layout_height="wrap_content"
            android:layout_width="450dp"
            android:layout_marginEnd="52dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:background="@drawable/shape_glass"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/edit_1_white"
                    android:id="@+id/imageButton4"
                    android:layout_weight="1"
                    android:background="@null"
                    android:scaleType="fitXY"
                    android:layout_margin="10dp" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/user_white"
                    android:id="@+id/imageButton"
                    android:layout_alignParentBottom="true"
                    android:layout_alignTop="@+id/button3"
                    android:background="@null"
                    android:scaleType="fitXY"
                    android:layout_weight="1"
                    android:layout_margin="10dp" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/users_1_white"
                    android:id="@+id/imageButton3"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:background="@null"
                    android:layout_margin="10dp" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/worldwide_white"
                    android:id="@+id/imageButton2"
                    android:layout_weight="1"
                    android:background="@null"
                    android:scaleType="fitXY"
                    android:layout_margin="10dp" />

            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>
</FrameLayout>
